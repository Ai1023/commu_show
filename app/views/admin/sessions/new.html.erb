<div class="container">
  <div class="row">
    <div class="mt-3 mb-2">
      <h2>ログイン</h2>
    </div>
  </div>
  <%= form_with model: @admin, url: admin_session_path do |f| %>

  　<div class="form-group row">
      <div class="col-md-3">メールアドレス</div>
      <div class="col-md-3">
        <%= f.email_field :email, autofocus: true, placeholder: "test@test.com", autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3">パスワード</div>
      <div class="col-md-3">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-5 px-sm-0 offset-sm-4">
        <%= f.submit "ログイン",  class:"btn btn-primary px-4 mt-3 mb-5" %>
      </div>
    </div>
  <% end %>
</div>
