<div class="container offset-4">
  <div class="mt-4">
    <h2>管理者ログイン</h2>
  </div>
  <%= form_with model: @admin, url: admin_session_path do |f| %>

  　<div class="col-md-4">
      <label class="form-label">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, placeholder: "test@test.com", autocomplete: "email", class: "form-control" %>
    </div>

    <div class="col-md-4 mt-3">
      <label class="form-label">パスワード</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="offset-2">
      <%= f.submit "ログイン",  class:"btn btn-outline-primary btn-lg mt-3 ml-5" %>
    </div>
  <% end %>
</div>
