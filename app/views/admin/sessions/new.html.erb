<div class="container p-5">
  <div class="row justify-content-center mb-3">
    <h2>管理者ログイン</h2>
  </div>
  <%= form_with model: @admin, url: admin_session_path do |f| %>

  <div class="row justify-content-center">
  　<div class="col-md-4">
      <label class="form-label">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, placeholder: "test@test.com", autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-4 mt-3">
      <label class="form-label">パスワード</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>
  </div>

  <div class="row offset-6">
    <%= f.submit "ログイン",  class: "btn btn-outline-primary btn-lg mt-3 ml-5" %>
  </div>
  <% end %>
</div>
