<div class="container pl-5 pr-5 pb-5">
  <div class="row mt-5 ml-3 mb-3">
    <h2>ユーザー一覧</h2>
  </div>

  <div class="row mb-5 ml-3 mr-3 pl-4 pr-4">
  <table class="table table-striped table-bordered">
    <thead class="table-secondary">
      <tr>
        <th>名前</th>
        <th>ニックネーム</th>
        <th>投稿数</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td>
            <%= customer.nickname %>
          </td>
          <td class="text-center">
            <%= "#{customer.games.count} 投稿" %>
          </td>
          <td class="text-center">
            <% if customer.is_active == true %>
              <span class="font-weight-bold">有効</span>
            <% else %>
              <span class="text-danger font-weight-bold">退会</span>
            <% end %>
          </td>
          <td class="text-center">
            <%= link_to "削除する", admin_customer_path(customer.id), method: :delete, class: "btn btn-lg btn-outline-danger", data: { confirm: '本当に削除しますか？' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
