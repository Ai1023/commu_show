<div class="container">
  <h3 class="mt-3 mb-3">ユーザー一覧</h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>名前</th>
        <th>ニックネーム</th>
        <th>投稿数</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= link_to admin_customer_path(customer.id), class: "text-light" do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td>
            <%= customer.nickname %>
          </td>
          <td>
            <%= "#{customer.games.count} 投稿" %>
          </td>
          <td>
            <% if customer.is_active == true %>
              <span class="font-weight-bold">有効</span>
            <% else %>
              <span class="text-danger font-weight-bold">退会</span>
            <% end %>
          </td>
          <td>
            <%= link_to "削除する", admin_customer_path(customer.id), method: :delete, class: "btn btn-outline-danger", data: { confirm: '本当に削除しますか？' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
