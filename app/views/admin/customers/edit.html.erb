<div class="container pl-5 pr-5 pb-5">
  <div class="row offset-1">
    <h2 class="mt-3 mb-3">ユーザー情報編集</h2>
  </div>

  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>

    <div class="form-group row">
      <label class="col-md-2 offset-1 col-form-label">ユーザーID</label>
      <div class="col-md-3 mt-2">
        <%= f.label :"#{@customer.id}" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <label class="col-md-2 col-form-label">名前</label>
      <div class="col-md-4">
        <%= f.text_field :last_name, class: "form-control", placeholder: "姓", autofocus: true, autocomplete: "last_name" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name, class: "form-control", placeholder: "名", autocomplete: "first_name" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <label class="col-md-2 col-form-label">フリガナ</label>
      <div class="col-md-4">
        <%= f.text_field :last_name_kana, class: "form-control", placeholder: "セイ", autocomplete: "last_name_kana" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name_kana, class: "form-control", placeholder: "メイ", autocomplete: "first_name_kana" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <label class="col-md-2 col-form-label">ニックネーム</label>
      <div class="col-md-8">
        <%= f.text_field :nickname, class: "form-control", placeholder: "ニックネーム", autocomplete: "nickname" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <label class="col-md-2 col-form-label">自己紹介</label>
      <div class="col-md-8">
        <%= f.text_area :introduction, class: "form-control", placeholder: "好きなゲームetc...", autocomplete: "introduction" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <label class="col-md-2 col-form-label">メールアドレス</label>
      <div class="col-md-8">
        <%= f.email_field :email, class: "form-control", placeholder: "test@test.com", autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-2 offset-1 col-form-label">ステータス</label>
      <div class="col-md-3 mt-2">
        <%= f.radio_button :is_active, true %>
      　<%= f.label :is_active, "有効", value: :true %>
      　<%= f.radio_button :is_active, false, onclick: "confirm('本当に変更しますか？')" %>
      　<%= f.label :is_active, "無効", value: :false %>
      </div>
    </div>

    <div class="row mb-5">
      <div class="offset-3">
        <%= f.submit "保存する", class: "btn btn-lg btn-outline-primary mt-2 ml-3" %>
      </div>
    </div>
  <% end %>
</div>