<div class="container">
  <h3 class="mt-3 mb-3">投稿詳細</h3>

  <div class="row">
    <div class="col-md-8">
      <div class="card border-dark">
        <div class="card-header">ニックネーム：<%= @game.customer.nickname %></div>
        <div class="card-body">
          <p class="card-title">タイトル：<%= @game.game_title %></p>
          <p class="card-text">内容：<%= @game.game_body %><br>
            投稿日：<%= @game.created_at.strftime('%Y/%m/%d') %>
          </p>
          <%= link_to "削除する", admin_game_path(@game), method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>

  <h3 class="mt-3 mb-3">コメント件数：<%= @game.post_comments.count %></h3>
  <div class="row">
    <% @game.post_comments.each do |post_comment| %>
      <div class="col-md-3">
        <div class="card border-info m-1">
          <div class="card-header">ニックネーム：<%= post_comment.customer.nickname %></div>
          <div class="card-body">
            <div class="card-text">
              <p>コメント：<%= post_comment.game_comment %></p>
              <p>投稿日：<%= post_comment.created_at.strftime('%Y/%m/%d') %></p>
              <%= link_to "削除する", admin_game_post_comment_path(post_comment.game, post_comment), method: :delete, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>