<div class="ml-5 mt-3">
  <h3>イベント作成</h3>
  <%= form_with model: @event, url: admin_events_path, method: :post do |f| %>
    <div>
      <div class="form-tag">タイトル</div>
      <%= f.text_field :event_title, :size=>"57" %>
    </div>

    <div>
      <div class="form-tag">内容</div>
      <%= f.text_area :event_body, :size=>"60" %>
    </div>

    <div>
      <div class="form-tag">開始時間</div>
      <%= f.datetime_select :start_time %>
    </div>

    <div>
      <div class="form-tag">終了時間</div>
      <%= f.datetime_select :finish_time %>
    </div>

    <div class="mt-3">
      <%= f.submit '投稿する', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<div class="m-5">
  <h3>イベントカレンダー</h3>
    <div>
      <%= month_calendar events: @events do |date, events| %>
        <%= date.day %>
        <% events.each do |event| %>
          <div>
            <%= link_to event.event_title, admin_event_path(event) %>
          </div>
        <% end %>
      <% end %>
    </div>
</div>