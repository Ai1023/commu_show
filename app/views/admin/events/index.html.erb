<div class="container p-5">
  <div>
    <%= flash[:notice] %>
  </div>
  <div class="row ml-4">
    <h2>イベント作成</h2>
  </div>

  <%= form_with model: @event, url: admin_events_path, method: :post do |f| %>

    <div class="ml-5">
      <div class="form-group">
        <label>タイトル</label>
        <div class="col-md-6">
          <%= f.text_field :event_title, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label>内容</label>
        <div class="col-md-6">
          <%= f.text_area :event_body, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row ml-3">
        <label class="mr-5">開始時間</label>
        <div class="col-md-6">
          <%= f.datetime_select :start_time %>
        </div>
      </div>

      <div class="form-group row ml-3">
        <label class="mr-5">終了時間</label>
        <div class="col-md-6">
          <%= f.datetime_select :finish_time %>
        </div>
      </div>

      <div class="row mt-3 ml-3">
      <%= f.submit '投稿する', class: "btn btn-lg btn-outline-primary" %>
      </div>
    </div>
  <% end %>

  <div class="row ml-4 mt-5 mb-3">
    <h2>イベントカレンダー</h2>
  </div>
  <div class="row m-3">
    <div class="col-12">
      <%= month_calendar events: @events do |date, events| %>
        <%= date.day %>
        <% events.each do |event| %>
          <div>
            <%= link_to event.event_title, admin_event_path(event) %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
