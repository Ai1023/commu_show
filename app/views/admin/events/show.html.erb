<div class="container">
  <div class="mt-3">
    <h3>イベント詳細</h3>
  </div>
  <div class="row">
    <div class="mt-3">
      <table class="table table-bordered">
        <tr>
          <th class="table-dark" style="width: 200px;">タイトル</th>
          <td style="width: 300px;"><%= @event.event_title %></td>
        </tr>
        <tr>
          <th class="table-dark">内容</th>
          <td><%= @event.event_body %></td>
        </tr>
        <tr>
          <th class="table-dark">開始時間</th>
          <td><%= @event.start_time.strftime("%Y-%m-%d-%H:%M") %></td>
        </tr>
        <tr>
          <th class="table-dark">終了時間</th>
          <td><%= @event.finish_time.strftime("%Y-%m-%d-%H:%M") %></td>
        </tr>
      </table>
    </div>
    </div>
    <div class="row mt-2">
      <div>
        <%= link_to '編集する', edit_admin_event_path(@event), class: "btn btn-success" %>
      </div>
      <div class="ml-4">
        <%= link_to '削除する', admin_event_path(@event.id), method: :delete, class: "btn btn-danger", data: { confirm: '本当に削除しますか?' } %>
      </div>
    </div>

  </div>
</div>