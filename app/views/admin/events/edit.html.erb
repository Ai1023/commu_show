<div class="container p-5">
  <div class="row mt-3 mb-3 offset-3">
    <h2>イベント編集</h2>
  </div>

  <%= form_with model: @event, url: admin_event_path, method: :patch do |f| %>

  <div class="form-group row justify-content-center">
    <div class="col-md-6">
      <label class="form-label">タイトル</label>
      <%= f.text_field :event_title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <div class="col-md-6">
      <label class="form-label">内容</label>
      <%= f.text_area :event_body, rows: '5', class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-3">
      <div class="ml-3">
        <label class="form-label">開始時間</label><br>
        <%= f.datetime_select :start_time %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="offset-3">
      <div class="ml-3">
        <label class="form-label">終了時間</label><br>
        <%= f.datetime_select :finish_time %>
      </div>
    </div>
  </div>

  <div class="row offset-3 mt-3">
    <%= f.submit '保存する', class: "btn btn-lg btn-outline-primary ml-1" %>
  </div>
  <% end %>
</div>
