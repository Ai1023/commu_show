<div class="ml-5 mt-3">
  <h3>イベント編集</h3>
  <%= form_with model: @event, url: 'admin_event_path', method: :patch do |f| %>
    <div>
      <div class="form-tag">タイトル</div>
      <%= f.text_field :event_title, :size=>"57" %>
    </div>

    <div>
      <div class="form-tag">内容</div>
      <%= f.text_field :event_body, :size=>"60" %>
    </div>

    <div>
      <div class="form-tag">開始時間</div>
      <%= f.datetime_select :start_time %>
    </div>

    <div>
      <div class="form-tag">終了時間</div>
      <%= f.datetime_select :finish_time %>
    </div>

    <div class="mt-3">
      <%= f.submit '保存する', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>