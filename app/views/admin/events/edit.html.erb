<div class="container">
  <div class="mt-3">
    <h3>イベント編集</h3>
    <%= form_with model: @event, url: admin_event_path, method: :patch do |f| %>
      <div class="col-md-6">
        <label class="form-label">タイトル</label>
        <%= f.text_field :event_title, class: "form-control" %>
      </div>

      <div class="col-md-6">
        <label class="form-label">内容</label>
        <%= f.text_area :event_body, class: "form-control" %>
      </div>

      <div class="col">
        <label class="form-label">開始時間</label><br>
        <%= f.datetime_select :start_time %>
      </div>

      <div class="col">
        <label class="form-label">終了時間</label><br>
        <%= f.datetime_select :finish_time %>
      </div>

      <div class="col mt-3">
        <%= f.submit '保存する', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>