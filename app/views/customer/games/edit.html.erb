<div class="container d-flex justify-content-center">
  <div class="row">
    <h3 class="mt-3">投稿編集フォーム</h3>
  </div>
</div>
<div class="container d-flex justify-content-center">
  <div class="row">
  <%= form_with model: @game, url: game_path(@game.id), method: :patch do |f| %>
    <div class="form-group">
      <%= f.label :game_title, class: "form-label" %>
      <%= f.text_field :game_title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :game_body, class: "form-label" %>
      <%= f.text_area :game_body, class: "form-control", rows: 5 %>
    </div>

    <div class="check_box">
    <span>タグ</span>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
     <div>
       <%= tag.label do %>
         <%= tag.check_box %>
         <%= tag.text %>
       <% end %>
     </div>
   <% end %>
 </div>

    <div>
      <%= f.submit '保存する', class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>