<div class="container mb-5">
  <div class="row justify-content-center">
    <h2 class="m-3">投稿編集</h2>
  </div>

  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_with model: @game, url: game_path(@game.id), method: :patch do |f| %>
        <div class="form-group">
          <label>タイトル</label>
          <%= f.text_field :game_title, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>内容</label>
          <%= f.text_area :game_body, class: "form-control", rows: 5 %>
        </div>
      </div>
    </div>

    <div class="row ml-3">
      <div class="offset-3">
        <div class="check_box">
          <span>タグを選択</span>
          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
            <div>
              <%= tag.label do %>
                <%= tag.check_box %>
                <%= tag.text %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row offset-3">
      <%= f.submit '保存する', class: "btn btn-lg btn-outline-primary ml-3 mb-5 mt-2" %>
    </div>
  <% end %>
</div>
