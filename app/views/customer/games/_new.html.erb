<div class="container mt-3">
  <h2 class="mt-3">New Post</h2>
  <%= form_with model: game, class: "mt-3" do |f| %>
    <div class="form-group">
      <label for="game_title">タイトル</label>
      <%= f.text_field :game_title, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="game_body">内容</label>
      <%= f.text_area :game_body, class: "form-control" %>
    </div>
    <%= f.submit '投稿する', class: "btn btn-primary" %>
  <% end %>
</div>