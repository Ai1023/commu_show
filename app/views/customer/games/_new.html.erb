<div class="row">
  <h2 class="mt-3 mb-3">新規投稿</h2>
</div>
<div>
  <%= form_with model: game do |f| %>
    <div class="form-group">
      <label>タイトル</label>
      <%= f.text_field :game_title, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>内容</label>
      <%= f.text_area :game_body, class: "form-control" %>
    </div>
    <div class="check_box">
      <span>タグを選択</span>
      <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_name) do |tag| %>
        <div>
          <%= tag.label do %>
            <%= tag.check_box %>
            <%= tag.text %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div>
    <%= f.submit '投稿する', class: "btn btn-lg btn-outline-primary" %>
  </div>
<% end %>
