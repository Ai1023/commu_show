<div class="row">
  <h2>投稿一覧</h2>
</div>
<div class="row">
  <% games.each do |game| %>
  <div class="col-md-3">
    <div class="card bg-light m-1">
      <div class="card-body">
        <p class="card-title">タイトル：<%= game.game_title %></p>
        <p class="card-text"><%= "#{game.post_comments.count} コメント" %></p>
        <%= link_to "内容を見る", game_path(game.id), class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
<% end %>
