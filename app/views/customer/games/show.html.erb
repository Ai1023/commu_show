<div class="container p-5">
  <div class="row">
    <div class="col-md-6">
      <div class="row ml-4 mb-3">
        <h2>投稿詳細</h2>
      </div>
      <div class="row ml-5">
        <div class="card border-dark bg-light">
          <h5 class="card-header">タイトル：<%= @game.game_title %></h5>
          <div class="card-body">
           <div class="card-text">
              <p>ニックネーム：<%= @game.customer.nickname %></p>
              <p>内容：<%= @game.game_body %></p>
              <p>タグ：<% @game.tags.each do |tag| %>
                  <%= tag.tag_name %>
                 <% end %>
              </p>
              <p>投稿日：<%= @game.created_at.strftime('%Y/%m/%d') %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="row mt-2 ml-2">
        <% if @game.customer == current_customer %>
          <div class="row ml-4">
            <div class="col-md-6">
              <%= link_to "編集する", edit_game_path(@game.id), class: "btn btn-lg btn-outline-primary" %>
            </div>
            <div class="col-md-6 text-right">
              <%= link_to "削除する", game_path(@game), method: :delete, class: "btn btn-lg btn-outline-danger", data: { confirm: '本当に削除しますか？' } %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="row ml-5">
        <%= render 'customer/favorites/favorite', game: @game %>
      </div>
    </div>
    <div class="col-md-6">
      <%= render 'customer/post_comments/form', game: @game, post_comment: @post_comment %>
    </div>
  </div>
  <div class="row mt-3">
    <%= render 'customer/post_comments/comment', game: @game %>
  </div>
</div>