<div class="container pl-5 pr-5">
  <div class="row m-3">
    <h2>イベントカレンダー</h2>
  </div>

  <div class="row mt-3 ml-3 mr-3 mb-5">
    <div class="col-12">
      <%= month_calendar events: @events do |date, events| %>
        <%= date.day %>
        <% events.each do |event| %>
          <div>
            <%= link_to event.event_title, event_path(event) %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>