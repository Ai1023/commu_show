<div class="container pl-5 pr-5 pb-5">
  <div class="row offset-1">
    <h2 class="mt-3 mb-3">新規会員登録</h2>
  </div>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "customer/shared/error_messages", resource: resource %>

    <div class="row form-group justify-content-center">
      <label class="col-md-2 col-form-label">名前</label>
      <div class="col-md-4">
        <%= f.text_field :last_name, autofocus: true, placeholder: "姓", autocomplete: "last_name", class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name, placeholder: "名", autocomplete: "first_name", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <label class="col-md-2 col-form-label">フリガナ</label>
      <div class="col-md-4">
        <%= f.text_field :last_name_kana, class: "form-control", placeholder: "セイ", autocomplete: "last_name_kana" %>
      </div>
      <div class="col-md-4">
        <%= f.text_field :first_name_kana, class: "form-control", placeholder: "メイ", autocomplete: "first_name_kana" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <label class="col-md-2 col-form-label">ニックネーム</label>
      <div class="col-md-8">
        <%= f.text_field :nickname, class: "form-control", placeholder: "ニックネーム", autocomplete: "nickname" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <label class="col-md-2 col-form-label">自己紹介</label>
      <div class="col-md-8">
        <%= f.text_area :introduction, class: "form-control", placeholder: "好きなゲームetc...", autocomplete: "introduction" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <label class="col-md-2 col-form-label">メールアドレス</label>
      <div class="col-md-8">
        <%= f.email_field :email, class: "form-control", placeholder: "test@test.com", autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-2 offset-1 form-label">パスワード<br>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </label>
      <div class="col-md-4">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-2 offset-1 form-label">パスワード(確認用)</label>
      <div class="col-md-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="offset-3">
        <%= f.submit "新規登録", class: "btn btn-outline-success btn-lg ml-3 mt-3" %>
      </div>
    </div>
  <% end %>

  <div class=" text-center mt-5 mb-5">
    <h3>仲間になった覚えがある？</h3>
    <h4>
      <strong><%= link_to "➤こちら", new_customer_session_path, class: "text-primary" %> </strong>から確認してみよう。
    </h4>
  </div>
</div>
