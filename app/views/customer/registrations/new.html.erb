<div class="container">
  <div class="row">
    <div class="mt-3 mb-2">
      <h2>新規会員登録</h2>
    </div>
  </div>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "customer/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <div class="col-md-3">名前</div>
      <div class="col-md-3">
        <%= f.text_field :last_name, placeholder: "姓", autofocus: true, autocomplete: "last_name" %>
      </div>
      <div class="col-md-5">
        <%= f.text_field :first_name, placeholder: "名", autocomplete: "first_name" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3">フリガナ</div>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana, placeholder: "セイ", autocomplete: "last_name_kana" %>
      </div>
      <div class="col-md-5">
        <%= f.text_field :first_name_kana, placeholder: "メイ", autocomplete: "first_name_kana" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3">ニックネーム</div>
      <div class="col-md-3">
        <%= f.text_field :nickname, placeholder: "ニックネーム", autocomplete: "nickname" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3 ">自己紹介</div>
      <div class="col-md-3">
        <%= f.text_area :introduction, placeholder: "好きなゲームetc...", autocomplete: "introduction" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3">メールアドレス</div>
      <div class="col-md-3">
        <%= f.email_field :email, placeholder: "test@test.com", autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3">パスワード
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-md-3">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-3">パスワード(確認用)</div>
      <div class="col-md-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 offset-md-3">
        <%= f.submit "新規登録", class: "btn btn-success d-grid gap-2 col-2 mx-auto" %>
      </div>
    </div>
  <% end %>
  <div class="mt-3 mb-5">
    <h3>既に登録済みの方</h3>
    <div class="ml-4">
      <strong><%= link_to "こちら", new_customer_session_path %> <strong>からログインしてください。
    </div>
  </div>
</div>
