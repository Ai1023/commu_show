<h2>ユーザー詳細</h2>

<table class="table">
  <tr>
    <th>ニックネーム</th>
    <td><%= @customer.nickname %></td>
  </tr>
  <tr>
    <th>自己紹介</th>
    <td><%= @customer.introduction %></td>
  </tr>
  <tr>
    <%= link_to followings_customer_path(@customer) do %>
    <th>フォロー：</th>
    <td><%= @followings.count %></td>
    <% end %>
  </tr>
  <tr>
    <%= link_to followers_customer_path(@customer) do %>
    <th>フォロワー：</th>
    <td><%= @followers.count %></td>
    <% end %>
  </tr>
</table>


<% if @customer != current_customer  %>
   <% if current_customer.following?(@customer) %>
   <%= link_to 'フォロー外す', customer_relationships_path(@customer), method: :delete, class: "btn-sm btn-danger" %>
   <% else %>
   <%= link_to 'フォローする', customer_relationships_path(@customer), method: :POST, class:"btn-sm btn-success" %>
   <% end %>
<% end %>