<div class="container">
  <h3 class="mt-3">ユーザー詳細</h3>
  <div class="user-profile">
    <table class="table table-bordered mt-3">
      <tr>
        <th class="table-header">ニックネーム</th>
        <td><%= @customer.nickname %></td>
      </tr>
      <tr>
        <th class="table-header">自己紹介</th>
        <td><%= @customer.introduction %></td>
      </tr>
      <tr>
        <%= link_to followings_customer_path(@customer), class: "table-link" do %>
          <th class="table-header">フォロー</th>
          <td><%= @followings.count %></td>
        <% end %>
      </tr>
      <tr>
        <%= link_to followers_customer_path(@customer), class: "table-link" do %>
          <th class="table-header">フォロワー</th>
          <td><%= @followers.count %></td>
        <% end %>
      </tr>
    </table>
  </div>

  <div class="follow-action">
    <% if @customer != current_customer %>
      <% if current_customer.following?(@customer) %>
        <%= link_to 'フォロー外す', customer_relationships_path(@customer), method: :delete, class: "btn btn-danger btn-sm" %>
      <% else %>
        <%= link_to 'フォローする', customer_relationships_path(@customer), method: :POST, class:"btn btn-success btn-sm" %>
      <% end %>
    <% end %>
  </div>
  <%= render 'customer/games/index', games: @games %>
</div>
