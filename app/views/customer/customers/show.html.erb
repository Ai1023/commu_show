<div class="container pl-5 pr-5">
  <div class="row">
    <div class="col-md-7">
      <div class="row mt-3 ml-3 mb-3">
        <h2>マイページ</h2>
      </div>

      <div class="row mb-1 ml-3 pl-4">
      <table class="table table-bordered">
        <tr>
          <th class="table-dark" style="width: 140px;">名前</th>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-dark">フリガナ</th>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-dark">ニックネーム</th>
          <td><%= @customer.nickname %></td>
        </tr>
        <tr>
          <th class="table-dark">自己紹介</th>
          <td><%= @customer.introduction %></td>
        </tr>
        <tr>
          <th class="table-dark">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th class="table-dark">フォロー</th>
          <td>
            <%= link_to followings_customer_path(@customer) do %>
              <%= @followings.count %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th class="table-dark">フォロワー</th>
          <td>
            <%= link_to followers_customer_path(@customer) do %>
              <%= @followers.count %>
            <% end %>
          </td>
        </tr>
      </table>
      </div>
    <div class="row ml-5">
      <% if @customer == current_customer %>
        <% if @customer.email == 'guest@test.com'%>
          <p>ゲストユーザーはプロフィールの編集はできません。</p>
        <% else %>
          <div>
            <%= link_to "プロフィール編集", customers_information_edit_path(@customer), class: "btn btn-lg btn-outline-primary" %>
          </div>
        <% end %>
      <% end %>
    </div>
    </div>

    <div class="col-md-4 ml-5">
      <%= render 'customer/games/new', game: @game %>
    </div>
    </div>

  <div class="row mt-5 mb-5">
  <div class="col-md-6">
    <h3>投稿一覧</h3>
    <ul class="list-group">
      <% @games.each do |game| %>
        <li class="list-group-item">
          <%= link_to game_path(game.id) do %>
            <h5 class="mb-1">タイトル：<%= game.game_title %></h5>
          <% end %>
          <p class="mb-0"><%= link_to "#{game.post_comments.count} コメント", game_path(game.id) %></p>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-6">
    <h3>いいねした投稿</h3>
    <% if @favorite_list.present? %>
      <ul class="list-group">
        <% @favorite_list.each do |game| %>
          <li class="list-group-item">
            <%= link_to customers_info_path(game.customer.id), class: "text-decoration-none" do %>
              <p class="mb-0">ニックネーム：<%= game.customer.nickname %></p>
            <% end %>
            <%= link_to game_path(game.id), class: "text-decoration-none" do %>
              <h5 class="mb-1"><%= game.game_title %></h5>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>いいねした投稿はありません</p>
    <% end %>
  </div>
</div>


</div>