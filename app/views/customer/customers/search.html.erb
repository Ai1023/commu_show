<div class="container p-5">
  <div class="row ml-4">
    <h2 class="mt-3 mb-3">ユーザー検索結果"<%= @q.nickname_cont %>"</h2>
  </div>

  <div class="row ml-5 mr-5">
    <table class="table table-striped table-bordered">
      <thead class="table-secondary">
        <tr>
          <th>ニックネーム</th>
          <th>フォロー</th>
          <th>フォロワー</th>
        </tr>
      </thead>
    <tbody>
      <% @results.each do |customer| %>
        <tr>
          <td>
            <%= link_to customers_info_path(customer.id) do %>
              <%= customer.nickname %>
            <% end %>
          </td>
          <td>
            <%= link_to followings_customer_path(customer.id) do %>
              <%= customer.followings.count %>
            <% end %>
          </td>
          <td>
            <%= link_to followers_customer_path(customer.id) do %>
              <%= customer.followers.count %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
