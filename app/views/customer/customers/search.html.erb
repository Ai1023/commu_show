<div class="container pl-5 pr-5">
  <div class="row ml-3">
    <h2 class="mt-3 mb-3">ユーザー検索結果</h2>
  </div>

  <div class="row mb-5 ml-3 mr-3 pl-4 pr-4">
    <table class="table table-striped table-bordered">
      <thead class="table-secondary">
        <tr>
          <th>ニックネーム</th>
          <th>フォロー</th>
          <th>フォロワー</th>
        </tr>
      </thead>
    <tbody>
      <% @results.each do |customer| %>
        <tr>
          <td>
            <%= link_to customers_info_path(customer.id) do %>
              <%= customer.nickname %>
            <% end %>
          </td>
          <td>
            <%= link_to followings_customer_path(customer.id) do %>
              <%= customer.followings.count %>
            <% end %>
          </td>
          <td>
            <%= link_to followers_customer_path(customer.id) do %>
              <%= customer.followers.count %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
