<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">フォロワー一覧</h1>
    </div>
    <div class="row justify-content-center">
      <% if @customers.present? %>
      <% @customers.each do |customer| %>
      <div class="one-post card w-100">
        <%= link_to customers_info_path(customer) do %>
        <p class="caption h4"><%= customer.nickname %></p>
        <% end %>
        <p class="caption"><%= "#{customer.games.count} 投稿" %></p>
      </div>
      <% end %>
      <% else %>
        <p>フォロワーはいません</p>
      <% end %>
    </div>
  </div>
</div>