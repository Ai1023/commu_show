<div class="cover-user-index">
  <div class="container">
    <div class="row justify-content-center">
      <h3 class="font-weight-normal mt-3 mb-5"><%= @customer.nickname %>さんのフォロワー一覧</h3>
    </div>
    <div class="row justify-content-center">
      <% if @customers.present? %>
        <% @customers.each do |customer| %>
          <div class="col-md-4">
            <div class="card mb-3">
              <%= link_to customers_info_path(customer) do %>
                <div class="card-body">
                  <h5 class="card-title"><%= customer.nickname %>さん</h5>
              <% end %>
                  <p class="card-text"><%= "#{customer.games.count} 投稿" %></p>
                </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">同士のフォロワーはいません</h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>