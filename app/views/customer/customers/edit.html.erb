<div class="container pl-5 pr-5">
  <h2 class="ml-5 mt-3 mb-3">プロフィール編集</h2>

  <%= form_with model: @customer, url: customers_information_path(@customer), method: :patch do |f| %>

    <div class="form-group row">
      <label class="col-md-2 offset-1 col-form-label">名前</label>
      <div class="col-md-3">
        <%= f.text_field :last_name, class: "form-control", placeholder: "姓", autofocus: true, autocomplete: "last_name" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name, class: "form-control", placeholder: "名", autocomplete: "first_name" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-2 offset-1 col-form-label">フリガナ</label>
      <div class="col-md-3">
        <%= f.text_field :last_name_kana, class: "form-control", placeholder: "セイ", autocomplete: "last_name_kana" %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :first_name_kana, class: "form-control", placeholder: "メイ", autocomplete: "first_name_kana" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-2 offset-1 col-form-label">ニックネーム</label>
      <div class="col-md-6">
        <%= f.text_field :nickname, class: "form-control", placeholder: "ニックネーム", autocomplete: "nickname" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-2 offset-1 col-form-label">自己紹介</label>
      <div class="col-md-6">
        <%= f.text_area :introduction, class: "form-control", placeholder: "好きなゲームetc...", autocomplete: "introduction" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-md-2 offset-1 col-form-label">メールアドレス</label>
      <div class="col-md-6">
        <%= f.email_field :email, class: "form-control", placeholder: "test@test.com", autocomplete: "email" %>
      </div>
    </div>

    <div class="row">
      <div class="offset-3">
        <%= f.submit "変更する", class: "btn btn-lg btn-outline-primary ml-3 mt-3" %><br>
      </div>
      <div class="offset-3">
        <%= link_to "退会する", customers_check_path, class: 'btn btn-lg btn-outline-danger mt-3' %>
      </div>
    </div>
  <% end %>
</div>
