<div class="container">
  <div class="row justify-content-center">
    <h2 class="mt-3 mb-4"><%= @customer.nickname %>さんのフォロー一覧</h2>
  </div>

  <div class="row justify-content-center mb-5">
    <% if @customers.present? %>
      <% @customers.each do |customer| %>
        <div class="col-md-8">
          <div class="card border-dark bg-light m-1">
            <%= link_to customers_info_path(customer) do %>
              <h5 class="card-header"><%= customer.nickname %>さん</h5>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">自己紹介</h5>
              <p class="card-text"><%= customer.introduction %></p>
              <p><%= "#{customer.games.count} 投稿" %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <h5 class="text-center">フォローしている仲間はいません</h5>
    <% end %>
  </div>
</div>
