<div class="container offset-4">
  <div class="mt-4">
    <h2>ログイン</h2>
  </div>
  <%= form_with model: @customer, url: customer_session_path do |f| %>

    <div class="col-md-4">
      <label class="form-label">メールアドレス</label>
      <%= f.email_field :email, autofocus: true, placeholder: "test@test.com", autocomplete: "email", class: "form-control" %>
    </div>

    <div class="col-md-4 mt-3">
      <label class="form-label">パスワード</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
    <%# end %>

    <div class="offset-2">
      <%= f.submit "ログイン", class: "btn btn-outline-success btn-lg mt-3 ml-5" %>
    </div>
  <% end %>

  <div class="m-5">
    <h3>初めましてですね？</h3>
    <h4>
      <strong><%= link_to "➤こちら", new_customer_registration_path, class: "text-light" %></strong>から仲間になろう。
    </h4>
  </div>
</div>